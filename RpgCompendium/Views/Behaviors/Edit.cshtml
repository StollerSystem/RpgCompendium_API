@{
  Layout = "_Layout";
}
@model RpgCompendium.Models.Behavior

<h3>Edit Behavior @Html.DisplayFor(model => model.BehaviorName)</h3>
<hr />
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.BehaviorId)
  @Html.Label("Behavior Name")
  @Html.EditorFor(model => model.BehaviorName,
new {@required="required"})
  @Html.Label("Behavior Description")
  @Html.EditorFor(model => model.BehaviorDescription,
new {@required="required"})


  <input type="submit" value="Save Changes" />
}

<p>@Html.ActionLink("Back to behaviors", "Index", null, null, new {@class="btn btn-primary btn-sm"})</p>