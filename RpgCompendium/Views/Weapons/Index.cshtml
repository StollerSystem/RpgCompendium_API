@using RpgCompendium.Models;
@{
  Layout = "_Layout";
}

<h1>List of Monster Weapons</h1>
<hr />

<h3>Weapons:</h3>
@if (@Model.Count == 0)
{
  <h3>No Weapons have been added yet!</h3>
}
@foreach (Weapon weapon in Model)
{
  <li>@Html.ActionLink($"{weapon.WeaponName}", "Details", new { id = weapon.WeaponId}) </li>
}
<hr />
@if (User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
    {
    <p>@Html.ActionLink("Add New Weapon", "Create", null, null, new {@class="btn btn-success btn-sm"})</p>
    }