@{
  Layout = "_Layout";
}
@model RpgCompendium.Models.Weapon

<h1>Add to a Monster</h1>

<h3>Add @Html.DisplayFor(model => model.WeaponName) to:</h3>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.WeaponId)

  @Html.Label("Select Monster")
  @Html.DropDownList("MonsterId")

  <input type="submit" value="Save" class="btn btn-success btn-sm" />
}
<br>
<p>@Html.ActionLink("Weapon List", "Index", null, null, new {@class="btn btn-primary btn-sm"})</p>